# Streamlit Secrets Template
# Copy this to .streamlit/secrets.toml and add your actual values

[secrets]
# Optional: OpenAI API Key for advanced AI features
OPENAI_API_KEY = "your_openai_api_key_here"

# Optional: Other API keys or configuration
LLM_TYPE = "simple"  # or "openai" if you have API key

[database]
# Vector database settings
VECTOR_DB_PERSIST_DIR = "./chroma_db"
DATA_DIR = "./data"